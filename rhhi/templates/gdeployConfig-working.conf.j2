#gdeploy configuration generated by cockpit-gluster plugin
[hosts]
{{node1_gluster_fqdn}}
{{node2_gluster_fqdn}}
{{node3_gluster_fqdn}}

[script1:{{node1_gluster_fqdn}}]
action=execute
ignore_script_errors=no
file=/usr/share/gdeploy/scripts/grafton-sanity-check.sh -d nvme0n1 -h {{node1_gluster_fqdn}}, {{node2_gluster_fqdn}}, {{node3_gluster_fqdn}}

[disktype]
jbod

[diskcount]
1

[stripesize]
256

[service1]
action=enable
service=chronyd

[service2]
action=restart
service=chronyd

[shell2]
action=execute
command=vdsm-tool configure --force

[script3]
action=execute
file=/usr/share/gdeploy/scripts/blacklist_all_disks.sh
ignore_script_errors=no

[pv1:{{node1_gluster_fqdn}}]
action=create
devices=nvme0n1
ignore_pv_errors=no

[pv1:{{node2_gluster_fqdn}}]
action=create
devices=nvme0n1
ignore_pv_errors=no

[pv1:{{node3_gluster_fqdn}}]
action=create
devices=nvme0n1
ignore_pv_errors=no

[vg1:{{node1_gluster_fqdn}}]
action=create
vgname=gluster_vg_nvme0n1
pvname=nvme0n1
ignore_vg_errors=no

[vg1:{{node2_gluster_fqdn}}]
action=create
vgname=gluster_vg_nvme0n1
pvname=nvme0n1
ignore_vg_errors=no

[vg1:{{node3_gluster_fqdn}}]
action=create
vgname=gluster_vg_nvme0n1
pvname=nvme0n1
ignore_vg_errors=no

[lv1:{{node1_gluster_fqdn}}]
action=create
poolname=gluster_thinpool_nvme0n1
ignore_lv_errors=no
vgname=gluster_vg_nvme0n1
lvtype=thinpool
size=160GB
poolmetadatasize=1GB

[lv2:{{node2_gluster_fqdn}}]
action=create
poolname=gluster_thinpool_nvme0n1
ignore_lv_errors=no
vgname=gluster_vg_nvme0n1
lvtype=thinpool
size=160GB
poolmetadatasize=1GB

[lv3:{{node3_gluster_fqdn}}]
action=create
poolname=gluster_thinpool_nvme0n1
ignore_lv_errors=no
vgname=gluster_vg_nvme0n1
lvtype=thinpool
size=160GB
poolmetadatasize=1GB

[lv4:{{node1_gluster_fqdn}}]
action=create
lvname=gluster_lv_engine
ignore_lv_errors=no
vgname=gluster_vg_nvme0n1
mount=/gluster_bricks/engine
size=69GB
lvtype=thick

[lv5:{{node1_gluster_fqdn}}]
action=create
lvname=gluster_lv_vmstore
ignore_lv_errors=no
vgname=gluster_vg_nvme0n1
mount=/gluster_bricks/vmstore
lvtype=thinlv
poolname=gluster_thinpool_nvme0n1
virtualsize=160GB

[lv6:{{node2_gluster_fqdn}}]
action=create
lvname=gluster_lv_engine
ignore_lv_errors=no
vgname=gluster_vg_nvme0n1
mount=/gluster_bricks/engine
size=69GB
lvtype=thick

[lv7:{{node2_gluster_fqdn}}]
action=create
lvname=gluster_lv_vmstore
ignore_lv_errors=no
vgname=gluster_vg_nvme0n1
mount=/gluster_bricks/vmstore
lvtype=thinlv
poolname=gluster_thinpool_nvme0n1
virtualsize=160GB

[lv8:{{node3_gluster_fqdn}}]
action=create
lvname=gluster_lv_engine
ignore_lv_errors=no
vgname=gluster_vg_nvme0n1
mount=/gluster_bricks/engine
size=69GB
lvtype=thick

[lv9:{{node3_gluster_fqdn}}]
action=create
lvname=gluster_lv_vmstore
ignore_lv_errors=no
vgname=gluster_vg_nvme0n1
mount=/gluster_bricks/vmstore
lvtype=thinlv
poolname=gluster_thinpool_nvme0n1
virtualsize=20GB

[selinux]
yes

[service3]
action=restart
service=glusterd
slice_setup=yes

[firewalld]
action=add
ports=111/tcp,2049/tcp,54321/tcp,5900/tcp,5900-6923/tcp,5666/tcp,16514/tcp,54322/tcp
services=glusterfs

[script2]
action=execute
file=/usr/share/gdeploy/scripts/disable-gluster-hooks.sh

[shell3]
action=execute
command=usermod -a -G gluster qemu

[volume1]
action=create
volname=engine
transport=tcp
replica=yes
replica_count=3
key=group,storage.owner-uid,storage.owner-gid,network.ping-timeout,performance.strict-o-direct,network.remote-dio,cluster.granular-entry-heal
value=virt,36,36,30,on,off,enable
brick_dirs={{node1_gluster_fqdn}}:/gluster_bricks/engine/engine,{{node2_gluster_fqdn}}:/gluster_bricks/engine/engine,{{node3_gluster_fqdn}}:/gluster_bricks/engine/engine
ignore_volume_errors=no

[volume2]
action=create
volname=vmstore
transport=tcp
replica=yes
replica_count=3
key=group,storage.owner-uid,storage.owner-gid,network.ping-timeout,performance.strict-o-direct,network.remote-dio,cluster.granular-entry-heal
value=virt,36,36,30,on,off,enable
brick_dirs={{node1_gluster_fqdn}}:/gluster_bricks/vmstore/vmstore,{{node2_gluster_fqdn}}:/gluster_bricks/vmstore/vmstore,{{node3_gluster_fqdn}}:/gluster_bricks/vmstore/vmstore
ignore_volume_errors=no
